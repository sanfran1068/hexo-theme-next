// Header Section
// --------------------------------------------------
.headband {
  z-index: 100;
  background: $headband-bg;
  height: $headband-height;

  +tablet-mobile() {
    display: none;
  }
}

.site-brand-container {
  display: flex;
  flex-shrink: 0;
  padding: 0 10px;
}

.use-motion {
  .column, .site-brand-container .toggle {
    opacity: 0;
  }
}

.special-header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 200px;
  background: linear-gradient(180deg, rgba(95, 75, 139, 1) 0%, rgba(255, 255, 255, 0.00) 100%), no-repeat center center;
  .special-header-name {
    position: absolute;
    top: -24px;
    right: -4px;
    font-size: 200px;
    line-height: 200px;
    color: white;
  }
}

@import 'site-meta';
@import 'site-nav';
@import 'menu';

@import 'bookmark';
@import 'github-banner';
